<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/githubApiKeyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub API Key" />

    <EditText
        android:id="@+id/githubApiKeyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GitHub APIキーを入力" />

    <TextView
        android:id="@+id/openAiApiKeyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenAI API Key"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/openAiApiKeyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OpenAI APIキーを入力" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp" />


</LinearLayout>
